<h1>マイページ</h1>

<%= flash[:notice] %>


	<div class="row sampleRow">
		<div class="col-xs-6">
			<div class="row sampleRow">
				<div class="col-xs-offset-3 col-xs-6">
					<div class="img">
						<%= attachment_image_tag @user, :profile_image, :fill, 350, 350, format: 'jpeg', fallback: "no_image.jpg", size:'350x350' %>
					</div>
				</div>
			</div>
			<div class="row sampleRow">
				<div class="col-xs-offset-3 col-xs-6">
					<div class="mypage-touroku">
						<%= link_to edit_user_path(@user.id) do %>
							<button class="btn btn-info btn-lg">登録情報編集</button>
						<% end %>
					</div>
				</div>
			</div>
			<div class="row sampleRow">
				<div class="col-xs-offset-3 col-xs-6">
					<div class="mypage-touroku">
						<%= link_to edit_user_path(@user.id) do %>
							<button class="btn btn-info btn-lg">購入履歴（後でパス編集）</button>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	<div class="mypage">
		<div class="col-xs-6">
			<p class ="form">氏名（漢字） : <%=@user.kanji_lastname %><%=@user.kanji_firstname %></p>

			<p class ="form">氏名（カナ） : <%=@user.kana_lastname %><%=@user.kana_firstname %></p>

			<p class ="form">ユーザー名 : <%=@user.user_name %></p>

			<p class ="form">メールアドレス : <%=@user.email %></p>

			<p class ="form">電話番号 : <%=@user.phone_number %></p>

			<p class ="form">郵便番号 : <%=@user.postal_code %></p>

			<p class ="form">住所 : <%=@user.postal_address %></p>
		</div>
	</div>
	<!-- いいね -->


	<div class="row">
		<div class="col-lg-8 col-lg-offset-2 like carousel slide" data-ride="carousel" >
		<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
			<div class="slider slider-container">
				<% @likes.each do |like| %>
				<% product = Product.find(like.product_id) %>
					<%= link_to attachment_image_tag(product, :jacket_image, :fill, 180, 180, fallback: 'no_image.jpg', size: "180x180"), product_path(product.id), class: 'like-on' %>
			<% end %>
			</div>
		</div>
	</div>
	<!-- いいね -->
<script>
	$(document).on('turbolinks:load', function() {
		$('.slider').slick({
			slidesToShow: 6,
			slidesToScroll: 1,
			autoplay: true,
			autoplaySpeed: 700,
			prevArrow: '<div class="slider-arrow slider-prev fa fa-angle-left"></div>',
			nextArrow: '<div class="slider-arrow slider-next fa fa-angle-right"></div>'
		});
	  	$('.like-on').mouseover(function(){
	    	$(this).css('opacity', '.1').animate({'opacity': '1'}, 'slow');
 	 	});
	})


</script>
