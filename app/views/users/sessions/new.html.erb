<div class="container">
  <div class="row field">
      <div class="col-lg-offset-4 col-lg-4">
        <h2 class="ad-login">ログイン</h2>
        <div class="circle2"></div>
          <br>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field form-group">
              <%= f.label "メールアドレス" %><br />
              <%= f.email_field :email, autofocus: true, :placeholder => "hoge@gmail.com" , class: "form-control" %>
            </div>
            <div class="field">
              <%= f.label "パスワード" %><br />
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>
            <div class="actions">
              <%= f.submit "ログイン", class: "btn btn-info" %>
            </div>
          <% end %>
            <br>
            <p>まだ会員登録がお済でない方</p>

            <%= link_to new_registration_path(resource_name) do %>
              <button class="btn btn-info btn-lg">新規登録</button>
            <% end %>
            <br>
      </div>
    </div>
</div>

