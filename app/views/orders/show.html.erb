<div class="purchase-history-container">
<div class="col-lg-offset-2 col-lg-8">
	<h1 class="ord-h">取引詳細</h1>
</div>
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<div class="order-user-info">
				<div class="row">
					<div class="col-md-6">
						<% if  current_user.profile_image_id %>
							<%= attachment_image_tag current_user, :profile_image, :fill, 350, 350, class: "img-circle pull-left profile-thumb myimg" %>
						<% else %>
							<%= image_tag 'no_image.jpg', size: '350x350', class: "img-circle pull-left profile-thumb myimg" %>
						<% end %>
					</div>
					<div class="col-md-3 ord-p">
						<p>ユーザー名 : <%= current_user.user_name %></p>
						<p>E-mail : <%= current_user.email %></p>
						<p>電話番号 : <%= current_user.phone_number %></p>
						<p>発送状況 : <%= @order.shipment_status %></p>
						<p>取引ID : <%=  @order.id %></p>
						<p>購入日 : <%=  @order.created_at %></p>
						<p>お届け先 : <%=  @order.destination %></p>
					</div>
				</div>
			</div>
			<br>
			<div class="order-product-info">
				<% @order_history.each do |od| %>
					<div class="row purchase-record">
						<div class="col-md-4">
							<% if  od[:jacket_image] %>
								<%= attachment_image_tag od, :jacket_image, :fill, 100, 100, class:"border" %>
							<% else %>
								<%= image_tag 'no_image.jpg', size: '100x100', class:"border" %>
							<% end %>
						</div>
						<div class="col-md-8">
							<p>商品名 : <%= od[:product_name] %></p>
							<p>アーティスト名 : <%= od[:artist_name] %></p>
							<p>購入枚数 : <%= od[:count] %></p>
							 <p>小計 : <%= @order_sub %></p>
						</div>
					</div>
				<% end %>
				<br>
				<p class="total-price">合計 : ¥<%= @total_price %></p>

			</div>
		</div>
		<div class="ordes-backk"></div>
	</div>
</div>

