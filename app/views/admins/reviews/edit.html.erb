<div class="edit-container">
	<h1>レビューを編集</h1>
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<div class="review-user">
				投稿者:<%= @review.user.user_name %>
			</div>
			<div class="edit-review-item">
				<h3>レビュー</h3>
				<%= form_with model: [@product,@review], url: admins_product_review_path(id: @review.id, product_id: @product.id), class: "edit-form" do |f| %>
					<%= f.text_area :body, size: '50x10',value: @review.body %>
					<%= f.submit %>
				<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
