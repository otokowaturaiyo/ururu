<div class="container">
	<div class="row">
		<div class="col-lg-1"></div>
		<div class="col-lg-10">
			<!-- ransackでエンドユーザーを検索できます -->
			<%= search_form_for @q,url: admins_users_path do |f| %>
				<%= f.label :user_nam_cont %>
				<%= f.search_field :user_name_cont %>
				<%= f.submit %>
			<% end %>
			<!-- ransack end -->
			<table class="table table-hover">
				<tbody>
					<% @users.each do |user| %>
				<tr>
					<%= admins_user_path(user) %>
					 	<td><%= attachment_image_tag user, :profile_image_id, :fill, 60, 60, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb", size: "60x60" %></td>
							<td><%= user.id %></td>
							<td><%= user.user_name %></td>
							<td><%= user.email %></td>
							<td><%= submit '', %></td>
					</tr>
				 	<% end %>
				</tbody>
			</table>
		</div>
		<div class="col-lg-1"></div>
	</div>
</div>

<%= paginate @users %>

