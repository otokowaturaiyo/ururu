<div class="container">
	<div class="row ">
		<div class="col-lg-offset-1 col-lg-10">
			<br>
			<br>
			<!-- ransack エンドユーザー検索可 -->
			<%= form_tag(admins_users_path, method: :get, enforce_utf8: false) do %>
				<div>
				<%= text_field_tag :q, params[:q], placeholder: "検索" %>
				<%= submit_tag "🔍", class: " btn glyphicon glyphicon-search" %>
				</div>
			<% end %>
			<!-- ransack -->
			<div class="space-bottom"></div>
			<table class="table table-hover">
				<tbody>
					<% @users.each do |user| %>
				<tr data-href=<%=admins_user_path(user.id) %>>
					<td><%= attachment_image_tag user, :profile_image_id, :fill, 45, 45, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb", size: "45x45" %></td>
					<td><%= user.id %></td>
					<td></td>
					<td></td>
					<td><%= user.user_name %></td>
					<td><%= user.email %></td>
				</tr>
				 	<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>

<%= render 'admins/table' %>

<%= paginate @users %>

