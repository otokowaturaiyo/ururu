<div class="container">
	<div class="row">
			<div class="col-lg-offset-3 col-lg-9">
				<h2>ユーザー情報編集</h2>
					<%= form_for @user, url: admins_user_path(@user.id) do |f| %>
						<h5>氏名(漢字)</h5>
							<div class="row">
								<div class="col-xs-4">
									<%= f.text_field :kanji_firstname, class: "form-control" %>
								</div>
									<div class="col-xs-4">
										<%= f.text_field :kanji_lastname, class: "form-control" %>
									</div>
							</div>
						<h5>氏名(カナ)</h5>
							<div class="row">
								<div class="col-xs-4">
									<%= f.text_field :kana_firstname, class: "form-control" %>
									</div>
										<div class="col-xs-4">
											<%= f.text_field :kana_lastname, class: "form-control" %>
										</div>
							</div>
						<h5>ユーザーネーム</h5>
							<div class="row">
								<div class="col-xs-4">
									<%= f.text_field :user_name, class: "form-control" %>
								</div>
							</div>
						<h5>メールアドレス</h5>
							<div class="row">
								<div class="col-xs-8">
									<%= f.text_field :email, class: "form-control" %>
								</div>
							</div>
						<h5>電話番号<span>※ハイフンなし</span></h5>
							<div class="row">
								<div class="col-xs-8">
									<%= f.text_field :phone_number, class: "form-control" %>
								</div>
							</div>
						<h5>郵便番号<span>※ハイフンなし</span></h5>
							<div class="row">
								<div class="col-xs-4">
									<%= f.text_field :postal_code, class: "form-control" %>
								</div>
							</div>
						<p>住所</p>
							<div class="row">
								<div class="col-xs-8">
									<%= f.text_field :postal_address, class: "form-control" %>
								</div>
							</div>
							<div class="row">
								<div class="col-xs-2"></div>
									<div class="col-xs-3">
										<br>
											<%= f.submit "送信", class: "btn btn-info" %>
									</div>
									<div class="col-xs-2">
										<br>
											<%= link_to "削除", admins_admins_user_resign_path(@user.id), method: :patch, "data-confirm" => "本当にユーザーをブロックする？", class: "btn btn-danger" %>
									</div>
							</div>
					<%end%>
				<br>
			</div>
	</div>
</div>
