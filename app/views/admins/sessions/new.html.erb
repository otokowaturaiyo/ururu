<div class="container">
  <div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">

      <h2>管理者ログイン</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field form-group">
          <%= f.label "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "hoge@gmail.com" , class: "form-control" %>
        </div>

          <div class="field">
            <%= f.label "パスワード" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "ログイン", class: "btn btn-info" %>
            </div>
          <% end %>

        <%= render "admins/shared/links" %>
      <div  class="col-lg-3">
    </div>
  </div>
</div>