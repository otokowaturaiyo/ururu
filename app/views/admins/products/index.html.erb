<div class="container">
	<div class="col-md-offset-2 col-md-8">
		<h1>商品一覧</h1>
		<br>
		<table class="table table-hover table-inverse">
			<thead>
				<th>商品ID</th>
				<th></th>
				<th>商品名</th>
				<th>在庫数</th>
				<th></th>
			</thead>
			<% @products.each do |product| %>
				<tbody>
					<td><%= product.id %></td>
					<td>
						<% if product.jacket_image_id.present? %>
              <%= attachment_image_tag  product, :jacket_image, :fill, 120, 120, class:"thumbnail" %>
            <% else %>
              <%= image_tag 'no_image.jpg', size:'120x120', class:"thumbnail" %>
            <% end %>
					</td>
					<td><%= product.product_name %></td>
					<td><%= product.stock %></td>
					<td><%= link_to "詳細", edit_admins_product_path(product), class: "btn btn-primary" %></td>
				</tbody>
			<% end %>
			<%= paginate @products, class: "paginate" %>
		</table>
	</div>
</div>
