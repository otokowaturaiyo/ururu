<div class="nested-fields row">
	<div class="row song-field">
		<span class="box-title">Disk</span>
		<p class="col-sm-offset-2 col-sm-6">曲名</p>
		<p class="col-sm-3">再生時間</p>
	</div>
	<div class="songs">
		<%= f.fields_for :songs do |song| %>
			<%= render 'song_fields', f: song %>
		<% end %>
		<div class="row">
			
		</div>
		<div class="links">
			<%= link_to_add_association '曲を追加する', f, :songs, class: 'btn btn-primary btn-xs col-sm-offset-2' %>
			<%= link_to_remove_association "このCDを削除する", f, class: 'btn btn-danger btn-xs' %>
		</div>

	</div>
</div>


