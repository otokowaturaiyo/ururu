<div class="form-horizontal">
	<%= form_for product, url: yield(:url) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="form-group">
		<%= f.label :product_name, "商品名", class:"col-sm-3 control-label" %>
		<div class="col-sm-9">
			<%= f.text_field :product_name, class:"form-control" %>
		</div>
	</div>

	<!-- 最終的には予測変換で実装。-->
	<div class="form-group">
		<%= f.label :artist_id, "アーティスト名", class:"col-sm-3 control-label" %>
		<div class="col-sm-9">
			<%= f.text_field :artist_id, class:"form-control" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :jacket_image, "ジャケット画像" , class:"col-sm-3 control-label" %>
		<div class="col-sm-9">
			<%= f.attachment_field :jacket_image %>
		</div>
	</div>

	<!-- 最終的には予測変換で実装。-->
	<div class="form-group">
		<%= f.label :label_id, "レーベル名", class:"col-sm-3 control-label" %>
		<div class="col-sm-9">
			<%= f.text_field :label_id, class:"form-control" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :genre_id, "ジャンル名", class:"col-sm-3 control-label" %>
		<div class="col-sm-9">
			<%= f.select :genre_id, @genres.map{|t| [t.genre, t.id]} ,class:"form-control" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :price, "値段（税抜き）", class:"col-sm-3 control-label" %>
		<div class="col-sm-9">
			<%= f.text_field :price, class:"form-control" %>
		</div>
	</div>

	<!-- 
		本来は収録曲の表になるべきところ。	
		実装の仕方がよくわからないので、とりあえずテキスト入力としておきます。
	-->

	<!-- 
	<div class="form-group"> 
		<%= f.label :price, "収録曲", class:"col-sm-3 control-label" %>
		<div class="col-sm-9">
			<%= f.text_field :price, class:"form-control" %>
		</div>
	</div>
	-->

	<div class="form-group">
		<%= f.label :stock, "在庫数", class:"col-sm-3 control-label" %>
		<div class="col-sm-9">
			<%= f.text_field :stock, class:"form-control" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :description, "商品説明", class:"col-sm-3 control-label" %>
		<div class="col-sm-9">
			<%= f.text_area :description, class:"form-control" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :status, "商品の状態 ", class:"col-sm-3 control-label" %>
		<div class="col-sm-9">
			<%= f.select :status, 
			[["予約受付中！", 1], ["好評販売中!", 2], ["取り扱い停止中", 3]],
			class:"form-control" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :recommend, "店長のおすすめ", class:"col-sm-3 control-label" %>
		<div class="col-sm-9">
			<%= f.check_box :recommend, :as => :boolean, class:"form-check-input" %>
		</div>
	</div>
	
	<%= f.submit "商品追加", class:"btn btn-primary center-block" %>

	<% end %>
</div>






