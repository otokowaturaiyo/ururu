<!DOCTYPE html>
<html>
  <head>
    <title>Ururu</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>
    <header>
      <nav class="navbar navbar-default navbar-fixed-top">
        <div class="nav-container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed"data-toggle="collapse"data-target="#navbar-ururu">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Ururu</a>
          </div>
          <div class="collapse navbar-collapse" id="navbar-ururu">
           <% if user_signed_in? %>
            <ul class="nav navbar-nav">
              <li><%= link_to "商品一覧", products_path %></li>
              <li><a href="#">カート確認</a></li>
              <li><%= link_to "ログアウト",products_path, method: :post%></li>
            </ul>
            <p class="search-window">
              <%= form_tag(search_list_path, enforce_utf8: false ,:method => 'get') do %>
                <%= text_field_tag :search %>
                <%= submit_tag '検索', :name => nil %>
              <% end %>
            </p>
            <p class="navbar-text navbar-right">ようこそ<%= @user.user.name %>さん</p>
           <% else %>
            <ul class="nav navbar-nav">
               <li><%= link_to "商品一覧", products_path %></li>
               <li><%= link_to "ログイン", new_user_session_path %></li>
            </ul>
             <p class="search-window">
               <%= form_tag(search_list_path, enforce_utf8: false ,:method => 'get') do %>
                 <%= text_field_tag :search %>
                 <%= submit_tag '検索', :name => nil %>
               <% end %>
             </p>
             <div class="navbar-text navbar-right">ようこそゲストさん</div>
           <% end %>
          </div>
        </div>
      </nav>
    </header>

    <%= yield %>

    <footer>
      <p class="footer-text1">全国送料一律¥500</p>
      <p class="footer-text2">© Ururu.inc</p>
    </footer>
  </body>
</html>


