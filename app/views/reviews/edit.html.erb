<div class="edit-container">
	<div class="reviw-edi">
		<h1>レビューを編集</h1>
		<div class="row">
			<div class="col-md-4 col-md-offset-4">
				<div class="edit-product-info">
					<ul>
						<li><i class="fas fa-music"></i>商品名：<%= @product.product_name %></li>
						<li><i class="fas fa-music"></i>アーティスト：<%= @product.artist.name %></li>
						<li><i class="fas fa-music"></i>レーベル：<%= @product.label.label %></li>
						<li><i class="fas fa-music"></i>ジャンル：<%= @product.genre.genre %></li>
					</ul>
				</div>
				<div class="edit-review-item">
					<h3>レビュー</h3>
					<%= form_with model: @review, url: product_review_path(product_id: @product.id, id: @review.id), class: "edit-form" do |f| %>
						<div id="star">
							<%= f.label :rate,'評価 ', class:'col-form-label' %>
							<%= f.hidden_field :star, id: :review_star %>
						</div>
						<script>
							$('#star').raty({
								size: 36,
								starOff:  '<%= asset_path('star-off.png') %>',
						  	starOn : '<%= asset_path('star-on.png') %>',
								scoreName: 'review[star]',
							});
						</script>
						<%= f.text_area :body, size: '50x10' %>
						<%= f.submit  "編集完了", class: 'btn btn-info'%>
					<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
	<br>
</div>



